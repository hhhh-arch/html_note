{
  "manifest_version": 3,
  "name": "HTML Note Highlighter",
  "version": "1.0",
  "description": "本地网页高亮和笔记工具",
  "permissions": ["scripting", "activeTab", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "HTML Note Highlighter"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "editor.js"],
      "css": ["style.css"]
    }
  ],
  "icons": {

    "128": "icon-128.png"
  }
}
