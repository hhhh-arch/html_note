{
  "manifest_version": 3,
  "name": "HTML Note Highlighter",
  "version": "1.0",
  "description": "本地网页高亮和笔记工具",
  "permissions": ["scripting", "activeTab","storage","sidePanel","contextMenus"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "HTML Note Highlighter"

  },
  "side_panel": {
    "default_path": "script/sideBar/side_panel.html"
  },
  "background": {
    "service_worker": "script/background/service-worker.js",
    "background": "script/background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "libs/purify.min.js",
        "dist/content.js"
],
      
      "css": ["script/fullScreenMindMap/styleFullScreen.css","libs/mind-elixir/style.css","style.css","script/prosemirror.css"]
    }
  ],
  "icons": {

    "128": "images/icon-128.png"
  }
}
